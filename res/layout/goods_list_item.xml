<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dip"
    android:background="@color/bg_color_gray" >

    <ImageView
        android:id="@+id/goods_listitem_thumb"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:background="@drawable/ic_item_thumb" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="15dip"
        android:layout_toRightOf="@+id/goods_listitem_thumb" >

        <TextView
            android:id="@+id/goods_listitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/goods_listitem_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:layout_below="@id/goods_listitem_name"
            android:textColor="@color/black"
            android:textSize="15dip" />
        <TextView
            android:id="@+id/goods_listitem_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_below="@id/goods_listitem_detail"
            android:textColor="@color/red"
            android:textSize="20dip" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_shopping_car" />

</RelativeLayout>