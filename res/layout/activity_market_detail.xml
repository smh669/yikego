<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
<include
		android:layout_width="match_parent" android:layout_height="50dip"
		layout="@layout/actionbar" />
    <RelativeLayout
            android:id="@+id/market_detail_area"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/market_detail_actionbar"
            android:background="@color/bg_color_gray">
        <ImageView
                android:id="@+id/market_detail_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/family"
                />
        <RelativeLayout
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/market_detail_image"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                >
            <TextView
                    android:id="@+id/market_detail_name"
                    android:text="全家便利超市"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/bg_color_blue"
                    android:textSize="20dp"
                    />
            <TextView
                    android:id="@+id/market_detail_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/market_detail_name"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/bg_color_blue"
                    android:text="距离：360米"
                    android:textSize="13dp"
                    />
            <TextView
                    android:id="@+id/market_detail_work_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/market_detail_distance"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/bg_color_blue"
                    android:text="营业时间10：00-22：00"
                    android:textSize="13dp"
                    />
            <TextView
                    android:id="@+id/market_detail_arrive_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_text_arrive"
                    android:textColor="@color/bg_color_blue"
                    android:layout_below="@id/market_detail_work_time"
                    android:layout_marginTop="3dp"
                    android:textSize="13dp"
                    />
        </RelativeLayout>
        <ImageView
                android:id="@+id/market_detail_shopping_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/market_detail_spend"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/ic_shopping_cart"
                />
        <TextView
                android:id="@+id/market_detail_spend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:text="30元起送"
                android:textColor="@color/bg_color_blue"
                android:textSize="13dp"
                />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/market_detail_location"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/market_detail_area"
            android:layout_marginTop="3dp"
            android:background="@color/bg_color_gray"
            >
        <ImageView
                android:id="@+id/market_detail_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_mark"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/market_detail_mark"
                android:layout_centerVertical="true"
                android:paddingLeft="5dp"
                android:text="上海市普陀区曹杨路新村舞巴街道梅林北路308号"
                android:maxLines="2"
                android:textColor="@color/bg_color_blue"
                android:textSize="15sp"
                />

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/market_detail_telphone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/market_detail_location"
            android:layout_marginTop="1dp"
            android:background="@color/bg_color_gray"
            >
        <ImageView
                android:id="@+id/market_detail_tel_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_telphone"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/market_detail_tel_icon"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:text="02162571011"
                android:maxLines="1"
                android:textColor="@color/bg_color_blue"
                android:textSize="15sp"
                />
        <View android:layout_width="1dp" android:layout_height="match_parent"
              android:background="@color/white"
                android:layout_centerHorizontal="true"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:text="02162571011"
                android:maxLines="1"
                android:textColor="@color/bg_color_blue"
                android:textSize="15sp"
                />

    </RelativeLayout>

    <GridView
            android:id="@+id/market_detail_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="2"
            android:stretchMode="columnWidth"
            android:horizontalSpacing="3dp"
            android:verticalSpacing="3dp"
            android:layout_below="@+id/market_detail_telphone"
            android:layout_marginTop="3dp"
            >
    </GridView>

</RelativeLayout>